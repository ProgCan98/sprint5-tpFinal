<div class="form-container">
  <form action="/edit/<%= country._id %>?_method=PUT" method="POST">
    <label for="name.official">Nombre Oficial:</label>
    <input
      type="text"
      id="name.official"
      name="name[official]"
      value="<%= country.name.official %>"
      required
    />
    <label for="capital">Capital (separada por comas):</label>
    <input
      type="text"
      id="capital"
      name="capital"
      value="<%= country.capital.join(', ') %>"
    />
    <label for="borders"
      >Fronteras (códigos de 3 letras, separados por comas):</label
    >
    <input
      type="text"
      id="borders"
      name="borders"
      value="<%= country.borders.join(', ') %>"
    />
    <label for="area">Área (km²):</label>
    <input
      type="number"
      id="area"
      name="area"
      value="<%= country.area %>"
      required
    />
    <label for="population">Población:</label>
    <input
      type="number"
      id="population"
      name="population"
      value="<%= country.population %>"
      required
    />
    <label for="gini">Índice Gini (0-100):</label>
    <input
      type="number"
      id="gini"
      name="gini"
      value="<%= country.gini || '' %>"
      step="0.01"
    />
    <label for="timezones">Zonas Horarias (separadas por comas):</label>
    <input
      type="text"
      id="timezones"
      name="timezones"
      value="<%= country.timezones.join(', ') %>"
    />
    <label for="creador">Creador:</label>
    <input
      type="text"
      id="creador"
      name="creador"
      value="<%= country.creador %>"
      readonly
    />
    <button type="submit">Actualizar</button>
  </form>
  <a href="/dashboard">Volver</a>
</div>
<!-- Explicación:
Formulario para editar un país, precargando los valores existentes. -->
